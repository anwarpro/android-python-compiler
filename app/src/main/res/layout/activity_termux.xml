<com.helloanwar.androidprocessbuilder.app.terminal.TermuxActivityRootView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_termux_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/activity_termux_root_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="3dp"
        android:layout_marginVertical="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.termux.view.TerminalView
            android:id="@+id/terminal_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_above="@id/terminal_toolbar_view_pager"
            android:layout_alignParentTop="true"
            android:autofillHints="password"
            android:focusableInTouchMode="true"
            android:importantForAutofill="no"
            android:scrollbarThumbVertical="@drawable/terminal_scroll_shape"
            android:scrollbars="vertical" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/terminal_toolbar_view_pager"
            android:layout_width="match_parent"
            android:layout_height="37.5dp"
            android:layout_alignParentBottom="true"
            android:background="@android:drawable/screen_background_dark_transparent"
            android:visibility="gone" />

    </RelativeLayout>

    <View
        android:id="@+id/activity_termux_bottom_space_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/transparent" />

</com.helloanwar.androidprocessbuilder.app.terminal.TermuxActivityRootView>
